<%= form_for(@article, url: '/articles') do |f| %>
  <div class="details_article">
    <div class="img_article"><%= image_tag 'logo_identifiant.png', class: 'article_img' %></div>

    <div class="details_cadre">
      <div class="details_redaction">
        <div>
          <strong>Titre : </strong><br><br>
          <strong>Sous-titre :</strong><br><br>
          <strong>Lien vers l'image :</strong>
        </div>
        <div class="input_article">
          <%= f.text_field :title %><br><br>
          <%= f.text_field :subtitle %><br><br>
          <%= f.text_field :picture %>
        </div>
      </div>
    </div>
  </div>

  <div class="descript_article">
    <strong>Contenu de l'article :</strong></br></br>
    <%= f.text_area(:content, rows: 30, class: 'redaction_article') %>
    <div class="soumettre_article">
      <div class="bouton_soumettre_article">
        <%= f.submit 'Soumettre l\'article', class: 'bouton text_bouton' %>
      </div>
    </div>
  </div>
<% end %>
